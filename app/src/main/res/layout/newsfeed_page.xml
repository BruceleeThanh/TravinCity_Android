<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:background="#fff"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/img_profile"
            android:id="@+id/ivProfileImage"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/ivProfileImage"
            android:text="Brucelee Thanh"
            android:layout_marginLeft="10dp"

            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/tvProfileName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivProfileImage"
            android:layout_below="@+id/tvProfileName"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:textColor="#afb6b1"
            android:textSize="12sp"
            android:text="Hồ Hoàn Kiếm, Quận Hoàn Kiếm, Hà Nội"
            android:id="@+id/tvLocation"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivProfileImage"
            android:layout_below="@+id/tvLocation"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:textColor="#afb6b1"
            android:textSize="12sp"
            android:text="2 giờ trước"
            android:id="@+id/tvTime"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hồ Hoàn Kiếm còn được gọi là Hồ Gươm (trong bản đồ Hà Nội năm 1886, hồ này được gọi là Hồ Hoàn Gươm - Lac de Hoan Guom), là một hồ nước ngọt tự nhiên của thành phố Hà Nội."
            android:layout_below="@+id/ivProfileImage"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:id="@+id/tvPostContent"/>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/tvPostContent"
            android:src="@drawable/hohoankiem"
            android:id="@+id/ivPostImage"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPostImage"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:src="@drawable/ic_favorite"
            android:id="@+id/ibLikeIcon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPostImage"
            android:layout_toRightOf="@+id/ibLikeIcon"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="4dp"
            android:text="10"
            android:textSize="20dp"
            android:id="@+id/tvLikeCounter"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPostImage"
            android:layout_toRightOf="@+id/tvLikeCounter"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:src="@drawable/ic_loyalty"
            android:id="@+id/ibPinIcon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPostImage"
            android:layout_toRightOf="@+id/ibPinIcon"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="4dp"
            android:text="15"
            android:textSize="20dp"
            android:id="@+id/tvPinCounter"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPostImage"
            android:layout_toRightOf="@+id/tvPinCounter"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:src="@drawable/ic_comment"
            android:id="@+id/ibCommentIcon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPostImage"
            android:layout_toRightOf="@+id/ibCommentIcon"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="4dp"
            android:text="12"
            android:textSize="20dp"
            android:id="@+id/tvCommentCounter"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPostImage"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:src="@drawable/ic_report_problem"
            android:id="@+id/ibReportProblemIcon"/>
        <EditText
            android:layout_width="310dp"
            android:layout_height="48dp"

            android:layout_below="@+id/ibLikeIcon"
            android:layout_marginTop="15dp"
            android:hint="Viết bình luận..."
            android:id="@+id/etWriteComment"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ibLikeIcon"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:src="@drawable/ic_send"
            android:id="@+id/ibSendCommentIcon"/>

</RelativeLayout>